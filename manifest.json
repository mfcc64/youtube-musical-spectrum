{
    "manifest_version" : 2,
    "name" : "YouTube Musical Spectrum",
    "short_name" : "YTMS",
    "description" : "Audio visualizer for YouTube with musical notes.",
    "version" : "1.4.0",
    "icons" : {
        "128" : "icon-128.png",
        "64"  : "icon-64.png",
        "48"  : "icon-48.png",
        "32"  : "icon-32.png",
        "24"  : "icon-24.png",
        "16"  : "icon-16.png"
    },
    "browser_action" : {
        "default_icon" : {
            "128" : "icon-128.png",
            "64"  : "icon-64.png",
            "48"  : "icon-48.png",
            "32"  : "icon-32.png",
            "24"  : "icon-24.png",
            "16"  : "icon-16.png"
        },
        "default_popup" : "popup.html",
        "default_title" : "YouTube Musical Spectrum"
    },
    "web_accessible_resources": [
        "*.png", ".js"
    ],
    "content_scripts" : [
        {
            "run_at"    : "document_start",
            "js"        : [ "codecs.js", "wrapper.js" ],
            "matches"   : [ "https://www.youtube.com/*" ]
        }
    ],
    "content_security_policy" : "default-src 'none'; script-src 'self'; style-src 'self'; img-src 'self';",
    "permissions" : [ "storage", "https://www.youtube.com/*" ]
}
