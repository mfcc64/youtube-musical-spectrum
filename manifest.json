{
    "manifest_version" : 3,
    "name" : "YouTube Musical Spectrum",
    "short_name" : "YTMS",
    "description" : "Audio visualizer for YouTube with musical notes.",
    "version" : "3.0.0",
    "icons" : {
        "128" : "icon-128.png",
        "64"  : "icon-64.png",
        "48"  : "icon-48.png",
        "32"  : "icon-32.png",
        "24"  : "icon-24.png",
        "16"  : "icon-16.png"
    },
    "action" : {
        "default_icon" : {
            "128" : "icon-128.png",
            "64"  : "icon-64.png",
            "48"  : "icon-48.png",
            "32"  : "icon-32.png",
            "24"  : "icon-24.png",
            "16"  : "icon-16.png"
        },
        "default_popup" : "popup.html",
        "default_title" : "YouTube Musical Spectrum"
    },
    "web_accessible_resources": [
        {
            "matches"   : [ "https://www.youtube.com/*" ],
            "resources" : [ "*.png", "/script.js", "/modules/*.mjs" ]
        }
    ],
    "content_scripts" : [
        {
            "run_at"    : "document_end",
            "js"        : [ "wrapper.js" ],
            "matches"   : [ "https://www.youtube.com/*" ]
        }
    ],
    "content_security_policy" : {
        "extension_pages" : "default-src 'none'; script-src 'self'; style-src 'self'; img-src 'self';"
    },
    "permissions" : [ "storage" ]
}
